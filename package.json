{
  "name": "tag-create-update-action",
  "version": "1.0.15",
  "description": "GitHub Action to create or update Git tags on local or remote repositories",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='integration|e2e'",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --testTimeout=60000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:act": "act workflow_dispatch -W .github/workflows/test.yml --eventpath .github/workflows/.act/event-workflow_call.json",
    "test:act:verbose": "act workflow_dispatch -W .github/workflows/test.yml --eventpath .github/workflows/.act/event-workflow_call.json -v",
    "test:act:ci": "act -W .github/workflows/ci.yml --env-file .act.env --secret-file .act.secrets",
    "test:act:e2e": "act workflow_dispatch -W .github/workflows/e2e-tests.yml --eventpath .github/workflows/.act/event-workflow_call.json --env-file .act.env --secret-file .act.secrets",
    "test:act:release": "act push --eventpath .github/workflows/.act/event-release.json --env-file .act.env --secret-file .act.secrets",
    "lint:act": "act -W .github/workflows/ci.yml -j lint --env-file .act.env --secret-file .act.secrets",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "format": "prettier --write \"src/**/*.ts\"",
    "release:patch": "standard-version --release-as patch --skip.changelog && git push --follow-tags",
    "release:minor": "standard-version --release-as minor --skip.changelog && git push --follow-tags",
    "release:major": "standard-version --release-as major --skip.changelog && git push --follow-tags"
  },
  "keywords": [
    "github-actions",
    "git",
    "tag",
    "versioning",
    "github",
    "gitea",
    "bitbucket"
  ],
  "author": "LiquidLogicLabs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LiquidLogicLabs/git-action-tag-create-update.git"
  },
  "homepage": "https://github.com/LiquidLogicLabs/git-action-tag-create-update#readme",
  "bugs": {
    "url": "https://github.com/LiquidLogicLabs/git-action-tag-create-update/issues"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3",
    "git-platform-detector": "https://git.ravenwolf.org/api/packages/liquidlogiclabs/npm/git-platform-detector/-/git-platform-detector-1.1.0.tgz"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3"
  }
}
